<%= form_for [@trip, @activity] do |f| %>
  <fieldset>
    <div>
      <%= f.hidden_field :trip_id , :value=>params[:trip_id] %>
    </div>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= date_select(:activity, :date) %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>
  </fieldset>

  <%= submit_tag("Create Activity") %>
<% end %>
