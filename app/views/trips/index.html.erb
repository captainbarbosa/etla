<div class="page-header">
  <h1>Your Trips</h1>
</div>


  <%= link_to new_trip_path do %>
      <i class="glyphicon glyphicon-plus"> <div class = "new_trip">Add New Trip</div></i>
  <% end %>


<ul class="list-group">
  <% activity_count = Activity.group(:trip_id).count %>

  <% @trips.each do |trip| %>
    <li>
      <li class="list-group-item">
        <div class="panel panel-primary">
          <div class="panel-body">
            <h2><%= link_to trip.name, trip %></h2>
          </div>

          <div class="panel-footer">
            
            <%= trip.start.strftime("%B") %> <%= trip.start.strftime("%d") %> 

            <br><br>

            <div class="btn-group" role="group" aria-label="...">
              <button type="button" class="btn btn-default">Activities <span class="badge"><%= activity_count[trip.id] %></span></button>

              <button type="button" class="btn btn-default">
                <%= link_to edit_trip_path(trip) do %>
                <i class="glyphicon glyphicon-pencil"></i> Edit
              <% end %>
              </button>

              <button type="button" class="btn btn-default">
                <%= link_to trip, method: 'delete' do %>
                <i class="glyphicon glyphicon-trash"></i> Delete
              <% end %>
              </button>

            </div>
          </div>
      </li>
  <% end %>
</ul>
